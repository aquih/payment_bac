<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="1">

        <template id="bac_acquirer_button">
            <form t-if="acquirer.bac_key_id" t-att-action="tx_url" method="post" target="_self">
                <input type="hidden" name="action" value="process_fixed" />
                <input type="hidden" name="key_id" t-att-value="tx_values['bac_key_id']"/>
                <input type="hidden" name="amount" t-att-value="tx_values['bac_amount']"/>
                <input type="hidden" name="url_finish" t-att-value="tx_values['bac_return']"/>
                <input type="hidden" name="order_description" t-att-value="tx_values['bac_reference']"/>
                <input type="hidden" name="customer_receipt" value="true" />
                <input type="hidden" name="language" value="es" />
                <input type="hidden" name="hash" t-att-value="tx_values['bac_hash']"/>
                <input type="hidden" name="first_name" t-att-value="partner_values['first_name']"/>
                <input type="hidden" name="last_name" t-att-value="partner_values['last_name']"/>
                <input type="hidden" name="email" t-att-value="partner_values['email']"/>
                <input type="hidden" name="address_1" t-att-value="partner_values['address']"/>
                <input type="hidden" name="postal_code" t-att-value="partner_values['zip']"/>
                <input type="hidden" name="city" t-att-value="partner_values['city']"/>
                <input type="hidden" name="shipping_state" t-att-value="partner_values['state'].code"/>
                <input type="hidden" name="country" t-att-value="partner_values['country'].code"/>
                <input type="hidden" name="phone" t-att-value="partner_values['phone']"/>
                <t t-if="tx_values.get('return_url')">
                    <input type='hidden' name='return_url' t-att-value="tx_values['return_url']"/>
                </t>
                <button type="submit" width="100px"
                    t-att-class="submit_class">
                    <img t-if="not submit_txt" src="/payment_bac/static/src/img/bac_icon.png"/>
                    <span t-if="submit_txt"><t t-esc="submit_txt"/> <span class="fa fa-long-arrow-right"/></span>
                </button>
            </form>
        </template>

    </data>
</openerp>
