<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="payment_acquirer_bac" model="payment.acquirer">
            <field name="name">BAC</field>
            <field name="view_template_id" ref="bac_form"/>
            <field name="provider">bac</field>
            <field name="company_id" ref="base.main_company"/>
            <field name="image_128" type="base64" file="payment_bac/static/src/img/bac_icon.png"/>
            <field name="pre_msg"><![CDATA[<p>Será redireccionado al sitio de Credomatic para que ingrese sus datos luego de apachar el botón de "Pagar ahora".</p>]]></field>
            <field name="description" type="html">
                <p>
                    Pagos con Credomatic.
                </p>
                <ul class="list-inline">
                    <li class="list-inline-item"><i class="fa fa-check"/>Online Payment</li>
                </ul>
            </field>
            <field name="payment_icon_ids" eval='[(6, 0, [ref("payment.payment_icon_cc_mastercard"), ref("payment.payment_icon_cc_visa")])]'/>
            <field name="bac_key_id">dummy</field>
            <field name="bac_key_text">dummy</field>
        </record>

    </data>
</odoo>
